msgstr ""

#. type: Block title
#: documentation/content/en/books/handbook/cutting-edge/_index.adoc:686
#, no-wrap
msgid "FreeBSD Versions and Repository Branchs"
msgstr ""

#. type: Table
#: documentation/content/en/books/handbook/cutting-edge/_index.adoc:708
#, no-wrap
msgid ""
"| uname -r Output\n"
"| Repository Path\n"
"| Description\n"
"\n"
"|`_X.Y_-RELEASE`\n"
